@using Stimulsoft.Report.Mvc;
@using Stimulsoft.Report.Web;

@{
    ViewBag.Title = "Index";
}

<h2>Full Screen Mode in Viewer</h2>

@Html.Stimulsoft().StiMvcViewer(new StiMvcViewerOptions()
{
    Actions =
    {
        GetReport = "GetReport",
        ViewerEvent = "ViewerEvent"
    },
    Appearance =
    {
        FullScreenMode = true
    }
})